@{
    ViewData["Title"] = "删除评论";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model Comment;

<div class="layui-col-md10 layui-col-md-offset1 layui-panel" style="padding:32px; min-height: 100%;height: 100%;">
    <dl class="layui-row">
        <dt class="layui-col-md2">
            @Html.DisplayNameFor(model => model.CommentId)
        </dt>
        <dd class="layui-col-md10">
            @Html.DisplayFor(model => model.CommentId)
        </dd>
        <dt class="layui-col-md2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="layui-col-md10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="layui-col-md2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="layui-col-md10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="layui-col-md2">
            @Html.DisplayNameFor(model => model.CreateTime)
        </dt>
        <dd class="layui-col-md2">
            @Html.DisplayFor(model => model.CreateTime)
        </dd>
        <dt class="layui-col-md2">
            @Html.DisplayNameFor(model => model.ManagerId)
        </dt>
        <dd class="layui-col-md2">
            @Html.DisplayFor(model => model.ManagerId)
        </dd>
    </dl>


    <div class="layui-row" style="margin:16px;">
        <form class="layui-form" asp-action="DeleteComment" method="post">
            <input class="layui-input layui-hide" type="text" name="id" value="@Model.CommentId" readonly />
            <div class="layui-form-item">
                <button type="submit" class="layui-btn layui-btn-primary layui-border-red" style="margin:16px 8px;">删除</button>
            </div>
        </form>
    </div>
</div>