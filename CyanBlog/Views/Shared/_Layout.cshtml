<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyanBlog</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CyanBlog.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/layui/css/layui.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Global.css" asp-append-version="true" />
</head>
<body>
        <div class="layui-row">
        <div class="layui-col-md12" style="text-align: center;">
            <ul class="layui-nav " style="background-color: rgba(0,0 , 0, 0);">
                <li class="layui-nav-item">
                    <a asp-action="Index" class="layui-font-black layui-font-18">博客</a>
                </li>
                <li class="layui-nav-item">
                    <a href="#" class="layui-font-black layui-font-18">分类</a>
                </li>
                <li class="layui-nav-item">
                    <a href="#" class="layui-font-black layui-font-18">时间线</a>
                </li>
                <li class="layui-nav-item">
                    <a href="#" class="layui-font-black layui-font-18">更多</a>
                    <dl class="layui-nav-child">
                        <dd><a href="#" class="layui-font-black"><i
                                    class="layui-icon layui-icon-email layui-font-18"></i></a></dd>
                        <dd><a href="#" class="layui-font-black"><i
                                    class="layui-icon layui-icon-github layui-font-18"></i></a></dd>
                        <dd><a href="#" class="layui-font-black"><i
                                    class="layui-icon layui-icon-login-qq layui-font-18"></i></a></dd>
                    </dl>
                </li>
            </ul>
        </div>
    </div>
    <div class="container layui-row">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="layui-row footer ">
            &copy; 2024 - CyanBlog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/layui/layui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
