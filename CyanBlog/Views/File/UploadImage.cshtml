@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "图片上传";
    string uploadInfo = ViewData["UploadInfo"] as string;
}

<div class="layui-col-md8 layui-col-md-offset2 layui-panel glass-container" style="padding:32px;margin-bottom:32px; min-height: 100%;height: 100%;">
    <h1>上传文件</h1>
    <em>@uploadInfo</em>
    <form class="layui-form" asp-action="UploadImage" asp-controller="File" method="post" enctype="multipart/form-data">
        <div class="layui-form-item">
            <label for="uploadbutton" class="layui-btn"><i class="layui-icon layui-icon-upload"></i>选择文件</label>
            <input id="uploadbutton" class="layui-hide" multiple="true" type="file" name="image" accept="image/*" />
        </div>
        <div class="layui-form-item">
            <input class="layui-btn" type="submit" value="上传"/>
        </div>
    </form>
    <a asp-action="Index" asp-controller="File">查看图片列表</a>
</div>