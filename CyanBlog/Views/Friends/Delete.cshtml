@model CyanBlog.Models.Friend

@{
    ViewData["Title"] = "删除友链";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="layui-col-md8 layui-col-md-offset2 layui-panel glass-container" style="padding:32px;margin-bottom:32px; min-height: 100%;height: 100%;">
    <div>
        <h4>Message</h4>
        <hr />
        <dl class="layui-row">
            <dt class="layui-col-md2">
                @Html.DisplayNameFor(model => model.FriendId)
            </dt>
            <dd class="layui-col-md10">
                @Html.DisplayFor(model => model.FriendId)
            </dd>
            <dt class="layui-col-md2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="layui-col-md10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="layui-col-md2">
                @Html.DisplayNameFor(model => model.Url)
            </dt>
            <dd class="layui-col-md10">
                @Html.DisplayFor(model => model.Url)
            </dd>
            <dt class="layui-col-md2">
                @Html.DisplayNameFor(model => model.PictureUrl)
            </dt>
            <dd class="layui-col-md2">
                @Html.DisplayFor(model => model.PictureUrl)
            </dd>
            <dt class="layui-col-md2">
                @Html.DisplayNameFor(model => model.CreateTime)
            </dt>
            <dd class="layui-col-md2">
                @Html.DisplayFor(model => model.CreateTime)
            </dd>
        </dl>

        <form asp-controller="Friends" asp-action="Delete" asp-route-id="@Model?.FriendId" method="post">
            <input type="submit" value="删除" class="layui-btn layui-btn-danger" /> |
            <a asp-action="ViewList">返回列表</a>
        </form>
    </div>
</div>



