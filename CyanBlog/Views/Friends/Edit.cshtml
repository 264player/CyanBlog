@model CyanBlog.Models.Friend

@{
    ViewData["Title"] = "编辑友链";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="layui-col-md10 layui-col-md-offset1 layui-panel" style="padding:32px; min-height: 100%;height: 100%;">
    <form asp-action="Edit" asp-route-id="@Model?.FriendId" method="post" class="layui-form">

        <div class="layui-form-item">
            <label class="">
                @Html.DisplayNameFor(model => model.FriendId)
                <input class="layui-input" type="text" asp-for="FriendId" value="@Model.FriendId" readonly />
            </label>
            <span asp-validation-for="FriendId" class="layui-font-red"></span>
        </div>

        <div class="layui-form-item">
            <label class="">
                @Html.DisplayNameFor(model => model.Title)
                <input class="layui-input" type="text" asp-for="Title" value="@Model.Title" />
            </label>
            <span asp-validation-for="Title" class="layui-font-red"></span>
        </div>

        <div class="layui-form-item">
            <label class="">
                @Html.DisplayNameFor(model => model.Url)
                <input class="layui-input" type="text" asp-for="Url" value="@Model.Url" />
            </label>
            <span asp-validation-for="Url" class="layui-font-red"></span>
        </div>

        <div class="layui-form-item">
            <label class="">
                @Html.DisplayNameFor(model => model.PictureUrl)
                <input class="layui-input" type="text" asp-for="PictureUrl" value="@Model.PictureUrl" />
            </label>
            <span asp-validation-for="PictureUrl" class="layui-font-red"></span>
        </div>

        <div class="layui-form-item">
            <label class="">
                @Html.DisplayNameFor(model => model.CreateTime)
                <input class="layui-input" readonly type="text" asp-for="CreateTime" value="@Model.CreateTime" />
            </label>
            <span asp-validation-for="CreateTime" class="layui-font-red"></span>
        </div>

        <div class="layui-form-item">
            <button type="submit" class="layui-btn layui-btn-primary layui-border-green" style="margin:16px 8px;">更新</button>
        </div>
    </form>

    <div>
        <a asp-action="ViewList">返回列表</a>
    </div>
</div>

